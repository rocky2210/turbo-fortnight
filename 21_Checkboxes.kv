<MyLayout>
    BoxLayout:
        orientation:"vertical"
        size: root.width, root.height
    
        Label:
            text: "Select the food"
            font_size: 32

        GridLayout:
            cols: 2

            Label:
                text: "Rosemilk"
                font_size: 20
            CheckBox:
                on_active: root.checkbox_click(self,self.active,"Rosemilk")

            Label:
                text: "Cake"
                font_size: 20
            CheckBox:
                on_active: root.checkbox_click(self,self.active,"Cake")

            Label:
                text: "Chocolate"
                font_size: 20
            CheckBox:
                on_active: root.checkbox_click(self,self.active,"Chocolate")

            Label:
                text: "Milk shake"
                font_size: 20
            CheckBox:
                on_active: root.checkbox_click(self,self.active,"Milk shake")

        Label: 
            id: output_label
            text: " "