<Button>
    size_hint: (.2,.2)

<MyLayout>
    BoxLayout:
        orientation:"vertical"
        size: root.width, root.height

        TextInput:
            id: calc_input
            text: "0"
            halign: "right"
            font_size: 65
            size_hint: (1,.15)

        GridLayout:
            cols: 4
            rows: 5

            # Row
            Button:
                font_size: 32
                text: "%"
                on_press: root.math_sign("%")

            
            Button:
                id: clear
                font_size: 32
                text: "C"
                on_press: root.clear()
            
            Button:
                font_size: 32
                text: u"\u00AB"
                on_press: root.remove()

            Button:
                font_size: 32
                text: "/"
                on_press: root.math_sign("/")


            Button:
                font_size: 32
                text: "7"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(7)

            Button:
                font_size: 32
                text: "8"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(8)

            Button:
                font_size: 32
                text: "9"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(9)

            Button:
                font_size: 32
                text: "x"
                on_press: root.math_sign("*")


            Button:
                font_size: 32
                text: "4"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(4)

            Button:
                font_size: 32
                text: "5"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(5)

            Button:
                font_size: 32
                text: "6"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(6)

            Button:
                font_size: 32
                text: "-"
                on_press: root.math_sign("-")

            Button:
                font_size: 32
                text: "1"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(1)

            Button:
                font_size: 32
                text: "2"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(2)

            Button:
                font_size: 32
                text: "3"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(3)

            Button:
                font_size: 32
                text: "+"
                on_press: root.math_sign("+")

            Button:
                font_size: 32
                text: "+/-"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.pos_neg()

            Button:
                font_size: 32
                text: "0"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(0)

            Button:
                font_size: 32
                text: "."
                background_color: (157/255,157/255,157/255,1)
                on_press: root.dot()

            Button:
                font_size: 32
                text: "="
                on_press: root.equal()

